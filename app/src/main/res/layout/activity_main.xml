<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:paddingTop="30dp"
    android:paddingStart="20dp"
    >
    <TextView
        android:layout_width="499dp"
        android:layout_height="122dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="685dp"
        android:text="APP que calcula el mayor de 3 nÃºmeros"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tvNumero1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero 1"
        android:textSize="20sp"
        android:layout_marginTop="100sp"
        />

    <EditText
        android:id="@+id/etNumero1"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="100sp"
        android:layout_marginEnd="50dp"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/tvNumero2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero 2"
        android:textSize="20sp"
        android:layout_marginTop="200sp"
        />

    <EditText
        android:id="@+id/etNumero2"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200sp"
        android:layout_marginEnd="50dp"
        android:inputType="number"
        />


    <TextView
        android:id="@+id/tvNumero3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300sp"
        android:text="Numero 3"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etNumero3"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="300sp"
        android:layout_marginEnd="50dp"
        android:inputType="number"
        />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="480dp"
        android:onClick="calcularMayor"
        android:text="Calcular"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/ftNumeroMayor"
        android:layout_width="468dp"
        android:layout_height="172dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="384dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="281dp"
        android:text=""
        android:textSize="20sp" />


